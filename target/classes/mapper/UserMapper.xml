<mapper namespace="test">
    <!-- select标签，封装了SQL语句信息、入参类型、结果映射类型 -->
    <select id="queryUserById" parameterType="java.lang.Integer"
            resultType="test.pojo.User" statementType="prepared">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="queryUserByName" parameterType="java.lang.String"
            resultType="test.pojo.User" statementType="prepared">
        SELECT * FROM user WHERE sex = #{username}
    </select>
</mapper>